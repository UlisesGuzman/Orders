<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_title">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/iv_title"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title_title"
            android:layout_toRightOf="@+id/iv_title"
            android:layout_alignParentTop="true"
            android:textSize="15pt"
            android:text="Title"


            />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_delete_title"
            android:src="@android:drawable/ic_menu_delete"
            android:layout_below="@+id/bt_edit_title"
            android:layout_alignLeft="@+id/bt_edit_title"
            android:layout_alignStart="@+id/bt_edit_title" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_edit_title"
            android:src="@android:drawable/ic_menu_edit"
            android:layout_alignTop="@+id/iv_title"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title_to_date"
            android:textSize="10pt"
            android:text="To Date"
            android:layout_alignBottom="@+id/bt_delete_title"
            android:layout_toRightOf="@+id/iv_title"
            android:layout_toEndOf="@+id/iv_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title_from_date"
            android:textSize="10pt"
            android:text="From Date"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_title"
            android:layout_toEndOf="@+id/iv_title" />

    </RelativeLayout>

</android.support.v7.widget.CardView>